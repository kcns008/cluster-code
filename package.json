{
  "name": "@cluster-code/cluster-code",
  "version": "1.0.0",
  "description": "AI-powered CLI tool for building, maintaining, and troubleshooting Kubernetes and OpenShift clusters",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cluster-code": "./bin/cluster-code.js"
  },
  "files": [
    "dist",
    "bin",
    ".claude",
    "plugins",
    "docs",
    "examples",
    "LICENSE.md",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "dev": "ts-node src/cli.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "kubernetes",
    "k8s",
    "openshift",
    "cluster",
    "cli",
    "devops",
    "sre",
    "cloud",
    "eks",
    "aks",
    "gke",
    "diagnostics",
    "troubleshooting",
    "ai",
    "claude",
    "agent"
  ],
  "author": "Cluster Code Team <support@cluster-code.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kcns008/cluster-code.git"
  },
  "bugs": {
    "url": "https://github.com/kcns008/cluster-code/issues"
  },
  "homepage": "https://github.com/kcns008/cluster-code#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.0",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "inquirer": "^8.2.5",
    "ora": "^5.4.1",
    "yaml": "^2.3.4",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "cli-table3": "^0.6.3"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
